<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameInput_mainBar"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/base_style"
        android:paddingLeft="28dp"
        android:paddingTop="13dp"
        android:text="AnyLearn"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameInput_mainBar_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="32dp"
        android:text="설정"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameInput_text"
        android:layout_width="350dp"
        android:layout_height="285dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/base_style"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="제목과 주제를 입력하세요."
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_titleInput"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/edit2_style"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="(예시) 학교에서 친구와 대화하기"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColorHint="#A7BFE4"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_subjectInput"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/edit2_style"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="(주제는 #를 붙여주세요) #학교 #일상"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColorHint="#A7BFE4"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nameInput_home_btn"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/button2_style"
        android:text="홈으로"
        android:textColor="#A6BEE3"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nameInput_list_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/button2_style"
        android:text="목록으로"
        android:textColor="#A6BEE3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>